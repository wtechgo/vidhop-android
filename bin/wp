#!/bin/bash

wp-href(){
  wp_href="$1"
  wp_text="$2"
  echo '<a href="'"$wp_href"'">'"$wp_text"'</a>'
}

wp-list-item() {
  wp_item="$1"
  echo
  echo '  <!-- wp:list-item -->'
  echo '    <li>'"$wp_item"'</li>'
  echo '  <!-- /wp:list-item -->'
}

wp-list() {
  wp_items="$( echo "$1" | grep "\S")" # grep removes blank lines added by wp-list-item
  echo '<!-- wp:list -->'
  echo '<ul class="wp-block-list">'
  echo "$wp_items"
  echo '</ul>'
  echo '<!-- /wp:list -->'
}

odysee-embed-urls() {
  urls="$1"
  while read -r url; do
    url="$(echo "$url" | tr -d '\')" 2>/dev/null
    embed="$(echo "$url" | sed 's;https://odysee.com/;https://odysee.com/$/embed/;g')"
    echo '<!-- wp:html --><figure><div class="fluid-width-video-wrapper" style="padding-top: 56.25%;"><iframe id="odysee-iframe" style="width:100%; aspect-ratio:16 / 9;" src="'"$embed"'" allowfullscreen></iframe></div><figcaption></figcaption></figure><!-- /wp:html -->'
    echo
  done <<<"$urls"
}
